{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
  "moduleResolution": "node",
  "lib": ["ES2020", "DOM"],
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
